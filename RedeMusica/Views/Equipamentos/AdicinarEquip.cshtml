@model RedeMusica.Models.Equipamentos

@{
    ViewBag.Title = "AdicinarEquip";
}

<h2>Adicinar Equipamento</h2>


@using (Html.BeginForm("AdicinarEquip", "Equipamentos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
       <div class="form-group">
        @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label col-sm-1 " })
        <div class="col-md-4">
            @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group" style="margin-left:1%">
            Imagem: <input type="file" name="file" />
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@if (ViewBag.ImagemE != null)
{
    <script type="text/javascript">



        alert('@ViewBag.ImagemE');



    </script>
}