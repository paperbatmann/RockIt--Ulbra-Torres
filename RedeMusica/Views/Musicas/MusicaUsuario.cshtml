@model RedeMusica.Models.Musicas

@using System.Collections.Generic
@{
    ViewBag.Title = "MusicaUsuario";
}

<h2>Adicionar Música</h2>


@using (Html.BeginForm("MusicaUsuario", "Musicas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-sm-1 " })
            <div class="col-md-4">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:3%">
            Imagem: <input type="file" name="fileImagem" />
        </div>

        <div class="form-group" style="margin-left:3%">
            música: <input type="file" name="fileMusica" />
        </div>
       
        <div style="margin-left:3%">
            Estilo:
            <select name="estiloNome" id="estiloNome" style="margin-left:1%">
                @{
    List<RedeMusica.Models.Musicas> lista = new List<RedeMusica.Models.Musicas>();
    lista = RedeMusica.Models.Musicas.estilo();

                }
                @foreach (var item in lista)
                {
                    <option value="@item.estiloNome">@item.estiloNome</option>
                }

            </select>

        </div>
      
            
        </div>
 <br />
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Postar música" class="btn btn-default" />
            </div>
        </div>
   
}


@section Scripts {
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryval")
}



@if (ViewBag.Musica != null)
{
    <script type="text/javascript">

        

            alert('@ViewBag.Musica');

        

    </script>

}
@if (ViewBag.Imagem != null)
{
    <script type="text/javascript">



        alert('@ViewBag.Imagem');



    </script>
}